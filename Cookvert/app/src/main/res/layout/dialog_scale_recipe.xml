<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="20dp"
    android:paddingBottom="18dp"
    tools:context="com.cookvert.conversion.fragments.ScaleRecipeDialog">

    <TextView
        android:id="@+id/text_multiplier_header_scale_recipe_dialog"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:text="@string/all_multiplier" />

    <EditText
        android:id="@+id/text_multiplier_amount_scale_recipe_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:hint="@string/hint_enter_multiplier"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="true"/>

</LinearLayout>
