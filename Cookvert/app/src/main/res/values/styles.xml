<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay</item>
        <item name="actionButtonStyle">@style/AppTheme.FloatingActionButton</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:actionBarDivider">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="AppTheme.FloatingActionButton" parent="AppTheme.FloatingActionButton">
        <item name="android:tint">@color/colorWhite</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.TextEditorButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    </style>

</resources>
